<%= partial "partials/header" %>
<div class="content-wrapper l-contain">
  <article class="post">
    <%# Page/Article Title %>
    <% if current_article.nil? %>
      <h1 class="post__title">SPA Documentation</h1>
    <% else %>
      <h1 class="post__title"><%= current_article.title %></h1>
    <% end %>
    <div class="post__content"><%= current_article.body %></div>
    <div class="post__pagination">
      <div class="pagination pagination--prev">
        <% if current_article.article_previous %>
          <%= link_to "Previous Article: #{current_article.article_previous.title}", current_article.article_previous %>
        <% end %>
      </div>
      <div class="pagination pagination--next">
        <% if current_article.article_next %>
          <%= link_to "Next Article: #{current_article.article_next.title}", current_article.article_next %>
        <% end %>
      </div>  
    </div>
  </article>
  <%= partial "partials/sidebar" %>
</div>
<%= partial "partials/footer" %>